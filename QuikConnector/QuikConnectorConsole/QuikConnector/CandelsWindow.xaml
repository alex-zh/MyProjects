<Window x:Class="QuikConnector.CandelsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CandelsWindow" Height="300" Width="725">
    <Grid>
        <ListView Grid.Row="0" Name="lvCandles" BorderThickness="1" Foreground="Black" Margin="0,3,3,3">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Date/Time" Width="160" DisplayMemberBinding="{Binding Date}" />
                    <GridViewColumn Header="Open" Width="100" DisplayMemberBinding="{Binding Open}" />
                    <GridViewColumn Header="High" Width="100" DisplayMemberBinding="{Binding High}" />
                    <GridViewColumn Header="Low" Width="100" DisplayMemberBinding="{Binding Low}" />
                    <GridViewColumn Header="Close" Width="100" DisplayMemberBinding="{Binding Close}" />
                    <GridViewColumn Header="Volume" Width="120" DisplayMemberBinding="{Binding Volume}" />

                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>

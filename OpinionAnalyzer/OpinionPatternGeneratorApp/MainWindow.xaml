<Window x:Class="MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="MainWindow" Height="534" Width="858">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60*"></RowDefinition>

            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="40*"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBox Grid.Row="0" Margin="3" BorderThickness="1">
        </TextBox>
        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <Button Margin="6" Click="Button_Click"> Generate pattern </Button>
            <Button Margin="6"> Find matches </Button>
        </StackPanel>
        <TextBox Grid.Row="2" Margin="3" BorderThickness="1">
        </TextBox>
    </Grid>
</Window>

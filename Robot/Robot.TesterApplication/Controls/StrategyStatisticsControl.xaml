<UserControl x:Class="Robot.TesterApplication.Controls.StrategyStatisticsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:Visualizer.VisualControls.Controls;assembly=Visualizer.VisualControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="600">

    <StackPanel Orientation="Horizontal">
        <GroupBox Header="Profit/Losses" FontWeight="Bold" Margin="6" >
            <controls:DynamicGridControl x:Name="ProfitLossGrid"></controls:DynamicGridControl>
        </GroupBox>
        
        <GroupBox Header="Deals Numbers" Margin="6" FontWeight="Bold" >
            <controls:DynamicGridControl x:Name="DealsGrid"></controls:DynamicGridControl>
        </GroupBox>
        
    </StackPanel>

</UserControl>

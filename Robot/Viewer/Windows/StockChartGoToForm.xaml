<Window x:Class="Viewer.Windows.StockChartGoToForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Go To" Height="180" Width="260" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <TextBlock Text="Go to:" Margin="6" FontWeight="Black" VerticalAlignment="Center"></TextBlock>
            <TextBox Text="" Margin="6" MinWidth="190" x:Name="tbGoToValue"></TextBox>
            </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Right">
            <Button Content="OK" Margin="6" Width="80" Click="Button_Click" ></Button>
            <Button Content="Cancel" Margin="6" Width="80" Click="ButtonBase_OnClick" ></Button>
        </StackPanel>
    </Grid>
</Window>
